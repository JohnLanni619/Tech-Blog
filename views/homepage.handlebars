<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        <p class="content"> {{content}} </p>
      </div>
      <div class="meta">
        Posted by {{user.username}} on
        {{format_date created_at}}
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}  </a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>